.product {
  width: 200px;
  height: 300px;
  border: 1px solid black;
/*   display: flex; */
  background-color: #555;
  margin: 10px auto;
}

.product:after {
  content: "Add to cart";
  color: #fff;
  display: block;
  width: 123px;
  height: 40px;
  border: 1px solid #fff;
  margin-left: calc(50% - 123px/2);
  visibility: hidden;
  cursor: pointer;
  text-align: center;
  line-height: 40px;
  margin-top: calc(50% - 20px);
/*   opacity: 80%; */
  background-color: rgba(255,255,255,80%);
  
}

